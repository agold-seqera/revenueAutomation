<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Services_Fields_Required_for_Service_Opp</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    Services_SKUs__c &gt; 0,
    ISPICKVAL(Services_Staffing__c, &quot;&quot;),
    ISNULL(Services_Lead__c))</errorConditionFormula>
    <errorMessage>Service staffing is required for opportunities with service SKUs</errorMessage>
</ValidationRule>
